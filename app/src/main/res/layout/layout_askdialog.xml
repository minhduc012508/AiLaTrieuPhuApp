<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="40">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtPercentA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:text="25%"></TextView>
                <com.skydoves.progressview.ProgressView
                    android:id="@+id/progress_1"
                    app:progressView_colorBackground="#03A9F4"
                    app:progressView_colorProgress="#FFEA32"
                    app:progressView_min="0"
                    app:progressView_max="100"
                    app:progressView_orientation="vertical"
                    app:progressView_animation="bounce"
                    android:layout_width="50dp"
                    android:layout_height="250dp"></com.skydoves.progressview.ProgressView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtPercentB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:text="25%"></TextView>
                <com.skydoves.progressview.ProgressView
                    android:id="@+id/progress_2"
                    app:progressView_colorBackground="#03A9F4"
                    app:progressView_colorProgress="#FFEA32"
                    app:progressView_min="0"
                    app:progressView_max="100"
                    app:progressView_orientation="vertical"
                    app:progressView_animation="bounce"
                    android:layout_width="50dp"
                    android:layout_height="250dp"></com.skydoves.progressview.ProgressView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtPercentC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:text="25%"></TextView>
                <com.skydoves.progressview.ProgressView
                    android:id="@+id/progress_3"
                    app:progressView_colorBackground="#03A9F4"
                    app:progressView_colorProgress="#FFEA32"
                    app:progressView_min="0"
                    app:progressView_max="100"
                    app:progressView_orientation="vertical"
                    app:progressView_animation="bounce"
                    android:layout_width="50dp"
                    android:layout_height="250dp"></com.skydoves.progressview.ProgressView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtPercentD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:text="25%"></TextView>
                <com.skydoves.progressview.ProgressView
                    android:id="@+id/progress_4"
                    app:progressView_colorBackground="#03A9F4"
                    app:progressView_colorProgress="#FFEA32"
                    app:progressView_min="0"
                    app:progressView_max="100"
                    app:progressView_orientation="vertical"
                    app:progressView_animation="bounce"
                    android:layout_width="50dp"
                    android:layout_height="250dp"></com.skydoves.progressview.ProgressView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnAskDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_blue_corner30"></Button>
    </LinearLayout>
</LinearLayout>
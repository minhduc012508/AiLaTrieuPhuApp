<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:text="Chọn ngày"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TextView>
        <Switch
            android:id="@+id/switchDayPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/custom_track_switch"
            android:thumb="@drawable/custom_thumb_switch"
            android:layout_marginStart="10dp"></Switch>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="20"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtNgayTu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textColorHint="#7E6F6F"
                android:layout_weight="10"
                android:visibility="gone"
                android:textColor="@color/black"
                android:hint="Ngày từ"></EditText>
            <EditText
                android:id="@+id/edtNgayDen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textColorHint="#7E6F6F"
                android:layout_weight="10"
                android:visibility="gone"
                android:textColor="@color/black"
                android:hint="Ngày đến"></EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Chọn giờ"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TextView>
        <Switch
            android:id="@+id/switchTimePick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/custom_track_switch"
            android:thumb="@drawable/custom_thumb_switch"
            android:layout_marginStart="20dp"></Switch>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="20"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtGioTu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textColorHint="#7E6F6F"
                android:layout_weight="10"
                android:visibility="gone"
                android:textColor="@color/black"
                android:hint="Giờ từ"></EditText>
            <EditText
                android:id="@+id/edtGioDen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textColorHint="#7E6F6F"
                android:layout_weight="10"
                android:visibility="gone"
                android:textColor="@color/black"
                android:hint="Giờ đến"></EditText>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnShowResult"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/xemketqua"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_black_corner30"></Button>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginStart="60dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="Email, họ tên, thời gian"
            android:textSize="15dp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Điểm số"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
    <ListView
        android:id="@+id/lvListRankTuyChon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>